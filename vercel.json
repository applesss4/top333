{
  "rewrites": [
    {
      "source": "/api/login",
      "destination": "/api/users"
    },
    {
      "source": "/api/users/validate",
      "destination": "/api/users"
    },
    {
      "source": "/api/users/check/(.*)",
      "destination": "/api/users"
    },
    {
      "source": "/api/profile/(.*)",
      "destination": "/api/profile"
    },
    {
      "source": "/api/hotel/(.*)",
      "destination": "/api/hotel"
    },
    {
      "source": "/api/shops/(.*)",
      "destination": "/api/shops"
    },
    {
      "source": "/dashboard",
      "destination": "/public/dashboard.html"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/public/$1"
    }
  ]
}
