{
  "rewrites": [
    {
      "source": "/api/register",
      "destination": "/api/users-supabase"
    },
    {
      "source": "/api/login",
      "destination": "/api/users-supabase"
    },
    {
      "source": "/api/users/validate",
      "destination": "/api/users-supabase"
    },
    {
      "source": "/api/users/check/(.*)",
      "destination": "/api/users-supabase"
    },
    {
      "source": "/api/profile/(.*)",
      "destination": "/api/profile"
    },
    {
      "source": "/api/hotel/(.*)",
      "destination": "/api/hotel"
    },
    {
      "source": "/api/shops/(.*)",
      "destination": "/api/shops-supabase"
    },
    {
      "source": "/api/schedule/(.*)",
      "destination": "/api/schedule-supabase"
    },
    {
      "source": "/dashboard",
      "destination": "/public/dashboard.html"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/public/$1"
    }
  ]
}
